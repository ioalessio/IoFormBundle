{% block jquery_date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('field_widget') }}
          <script>
          $(function() {
            $( "#{{ id }}" ).datepicker({
                dateFormat: '{{ date_format }}'
              });
          });
          </script>
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year),
                '{{ month }}': form_widget(form.month),
                '{{ day }}':   form_widget(form.day),
            })|raw }}
        </div>
          <script>
          $(function() {
            $( "#{{ id }}" ).datepicker({
                dateFormat: '{{ date_format }}'

{#              dateformat: '{{ date_pattern|replace({
                '{{ year }}':  "y",
                '{{ month }}': "m",
                '{{ day }}':   "d",
            })|raw }}'
#}

              });
          });
          </script>
    {% endif %}
{% endspaceless %}
{% endblock jquery_date_widget %}



{% block jquery_range_widget %}
{% spaceless %}
        {{ block('field_widget') }}
      <div id="{{ id }}_slider"></div>
        <script>
        $(function() {
            $( "#{{ id }}_slider" ).slider({
              value:{{ value }},
              min: {{ min }},
              max: {{ max }},
              step: {{ step }},
              slide: function( event, ui ) {
                $( "#{{ id }}" ).val( ui.value );
              }
            });
          });
         </script>

{% endspaceless %}
{% endblock jquery_range_widget %}

{% block jquery_tinymce_widget %}
          {{ block ('textarea_widget') }}

         <script>
          $(function(){
            $("#{{ id }}").tinymce( {{ block('tinymce_configuration') }} );
          });
          </script>

{% endblock jquery_tinymce_widget %}


